---
apiVersion: v1
kind: Namespace
metadata:
  name: keycloak
---
apiVersion: v1
kind: Service
metadata:
  name: keycloak
  labels:
    app: keycloak
  namespace: keycloak
spec:
  ports:
  - name: http
    port: 8080
    targetPort: 8080
  selector:
    app: keycloak
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak
  namespace: keycloak
  labels:
    app: keycloak
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keycloak
  template:
    metadata:
      labels:
        app: keycloak
    spec:
      containers:
      - name: keycloak
        image: quay.io/keycloak/keycloak:12.0.4
        env:
        - name: KEYCLOAK_USER
          value: "{{ ilke_features.keycloak_oidc.admin.user }}"
        - name: KEYCLOAK_PASSWORD
          value: "{{ ilke_features.keycloak_oidc.admin.password }}"
        - name: PROXY_ADDRESS_FORWARDING
          value: "true"
        - name: DB_USER
          value: "{{ ilke_features.keycloak_oidc.admin.user }}"
        - name: DB_PASSWORD
          value: "{{ ilke_features.keycloak_oidc.admin.password }}"
        - name: PROXY_ADDRESS_FORWARDING
          value: "true"
        - name: DB_VENDOR
          value: "postgres"
        - name: DB_ADDR
          value: "keycloak-db"
        - name: DB_PORT
          value: "5432"
#        - name: KEYCLOAK_IMPORT
#          value: /var/lol.json
        ports:
        - name: http
          containerPort: 8080
        - name: https
          containerPort: 8443
        readinessProbe:
          httpGet:
            path: /auth/realms/master
            port: 8080
#        volumeMounts:
#        - name: oidc-default-realm
#          mountPath: /var/
#      volumes:
#        - name: oidc-default-realm
#          configMap:
#            name: oidc-default-realm
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keycloak-db
  namespace: keycloak
  labels:
    app: keycloak-db
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keycloak-db
  template:
    metadata:
      labels:
        app: keycloak-db
    spec:
      containers:
      - name: keycloak-db
        image: postgres:13.2
        env:
        - name: POSTGRES_DB
          value: "keycloak"
        - name: POSTGRES_USER
          value: "{{ ilke_features.keycloak_oidc.admin.user }}"
        - name: POSTGRES_PASSWORD
          value: "{{ ilke_features.keycloak_oidc.admin.password }}"
        ports:
        - containerPort: 5432
---
apiVersion: v1
kind: Service
metadata:
  name: keycloak-db
  labels:
    app: keycloak-db
  namespace: keycloak
spec:
  ports:
  - port: 5432
    targetPort: 5432
  selector:
    app: keycloak-db
  type: ClusterIP
{% if ilke_features.keycloak_oidc.auto_bootstrap.bootstrap_keycloak | bool == True %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: keycloak
  namespace: keycloak
spec:
  tls:
  - hosts:
      - {{ ilke_features.keycloak_oidc.auto_bootstrap.host }}
    secretName: keycloak-tls
  rules:
  - host: {{ ilke_features.keycloak_oidc.auto_bootstrap.host }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: keycloak
            port:
              number: 8080
{% endif %}
